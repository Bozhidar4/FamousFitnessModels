    <div>
        <img src="~/Images/lazar2.jpg" class="slider img-responsive" />
    </div>
    <div>
        <img src="~/Images/Max.jpeg" class="slider img-responsive" />
    </div>
    <div>
        <img src="~/Images/ulisses.jpeg" class="slider img-responsive" />
    </div>
    <div>
        <img src="~/Images/Sergi.jpg" class="slider img-responsive" />
